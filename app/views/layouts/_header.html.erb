<header class="bg-white shadow-md fixed top-0 left-0 right-0 z-50">
  <div class="max-w-7xl mx-auto px-4 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo/Home Link -->
      <%= link_to root_path, class: "flex items-center gap-2 text-gray-900 hover:text-red-600 transition-colors" do %>
        <span class="text-2xl">ğŸ</span>
        <span class="text-xl font-bold">Secret Santa</span>
      <% end %>

      <!-- Navigation -->
      <nav class="flex items-center gap-4">
        <% if Current.participant %>
          <!-- Show relevant link based on user type -->
          <%
            if Current.participant.organizer?
              link_path = Current.participant.event.active? ? dashboard_event_path(Current.participant.event) : organize_event_path(Current.participant.event)
              link_text = Current.participant.event.active? ? "Dashboard" : "My Event"
            else
              link_path = event_path(Current.participant.event)
              link_text = "My Event"
            end
          %>
          <%= link_to link_text, link_path, class: "text-gray-700 hover:text-gray-900 font-medium" %>
          <%= link_to "Wishlist", wishlist_items_path, class: "text-gray-700 hover:text-gray-900 font-medium" %>
          <%= button_to "Sign Out", session_path, method: :delete, class: "text-red-600 hover:text-red-700 font-medium" %>
        <% else %>
          <%= link_to "Create Event", new_event_path, class: "bg-red-600 hover:bg-red-700 text-white font-semibold px-4 py-2 rounded-lg transition-colors" %>
        <% end %>
      </nav>
    </div>
  </div>
</header>
