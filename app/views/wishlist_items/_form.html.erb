<%= form_with model: wishlist_item, url: wishlist_items_path, class: "space-y-4" do |f| %>
  <% if wishlist_item.errors.any? %>
    <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg">
      <ul class="list-disc list-inside">
        <% wishlist_item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :description, "Item Description", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.text_area :description, rows: 3, placeholder: "What would you like? (e.g., Blue wool socks, size 42)", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent", required: true %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div>
      <%= f.label :url, "Link (optional)", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.url_field :url, placeholder: "https://example.com/product", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent" %>
    </div>

    <div>
      <%= f.label :price, "Estimated Price (optional)", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.text_field :price, placeholder: "~300 SEK", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent" %>
    </div>
  </div>

  <%= f.submit "Add to Wishlist", class: "w-full bg-green-600 hover:bg-green-700 text-white font-semibold py-3 px-6 rounded-lg transition-colors cursor-pointer" %>
<% end %>
