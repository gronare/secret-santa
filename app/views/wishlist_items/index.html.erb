<div class="max-w-4xl mx-auto">
  <div class="mb-8 flex items-center justify-between">
    <% if @participant.organizer? %>
      <%= link_to dashboard_event_path(@participant.event), class: "text-gray-600 hover:text-gray-900" do %>
        â† Back to dashboard
      <% end %>
    <% else %>
      <%= link_to event_path(@participant.event), class: "text-gray-600 hover:text-gray-900" do %>
        â† Back to event
      <% end %>
    <% end %>
  </div>

  <div class="bg-white rounded-lg shadow-lg p-8 mb-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-2">My Wishlist</h1>
    <p class="text-gray-600 mb-6">Add items you'd like to receive for <%= @participant.event.name %></p>

    <% if @participant.event.budget.present? %>
      <div class="bg-blue-50 border border-blue-200 text-blue-800 px-4 py-3 rounded-lg mb-6">
        ğŸ’° <strong>Budget:</strong> <%= @participant.event.budget %>
      </div>
    <% end %>

    <div id="wishlist-form" class="mb-8">
      <%= render "form", wishlist_item: @wishlist_item %>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow-lg p-8">
    <h2 class="text-2xl font-bold text-gray-900 mb-6">Your Wishlist Items (<span id="wishlist-count"><%= @wishlist_items.count %></span>)</h2>

    <div id="wishlist-items" class="space-y-4">
      <% if @wishlist_items.any? %>
        <% @wishlist_items.each do |item| %>
          <%= render "wishlist_item", item: item %>
        <% end %>
      <% else %>
        <div class="text-center py-12 text-gray-500">
          <p class="text-lg mb-2">No items yet</p>
          <p class="text-sm">Add your first wishlist item above!</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
