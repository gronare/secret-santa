<div class="bg-white rounded-lg shadow-lg p-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-2">Create Your Secret Santa</h1>
    <p class="text-gray-600 mb-8">Fill in the details to get started with your gift exchange.</p>

    <%= form_with model: @event, class: "space-y-6", data: { turbo: true } do |f| %>
      <% if @event.errors.any? %>
        <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg">
          <h3 class="font-semibold mb-2"><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h3>
          <ul class="list-disc list-inside">
            <% @event.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :name, "Event Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :name, placeholder: "Family Christmas 2024", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent", required: true %>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <%= f.label :event_date, "Event Date", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.date_field :event_date, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent" %>
        </div>

        <div>
          <%= f.label :budget, "Budget per Gift", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_field :budget, placeholder: "Max 350 SEK", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent" %>
        </div>
      </div>

      <div>
        <%= f.label :location, "Location", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :location, placeholder: "Where will the gift exchange take place?", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent" %>
      </div>

      <div>
        <%= f.label :description, "Description (Optional)", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_area :description, rows: 3, placeholder: "Any additional details about the event...", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent" %>
      </div>

      <div class="border-t pt-6">
        <h2 class="text-xl font-semibold mb-4">Your Information</h2>

        <div class="space-y-4">
          <div>
            <%= f.label :organizer_name, "Your Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.text_field :organizer_name, placeholder: "John Doe", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent", required: true %>
          </div>

          <div>
            <%= f.label :organizer_email, "Your Email", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.email_field :organizer_email, placeholder: "john@example.com", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent", required: true %>
            <p class="text-sm text-gray-500 mt-1">You'll receive a magic link to manage your event.</p>
          </div>
        </div>
      </div>

      <div class="flex gap-4">
        <%= f.submit "Create Event", class: "flex-1 bg-red-600 hover:bg-red-700 text-white font-semibold py-3 px-6 rounded-lg transition-colors cursor-pointer" %>
        <%= link_to "Cancel", root_path, class: "px-6 py-3 text-gray-700 hover:text-gray-900 font-semibold" %>
      </div>
    <% end %>
  </div>
