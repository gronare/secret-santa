<!-- Event Header -->
  <%
    # Theme configuration
    theme_config = {
      "christmas" => { emoji: "ğŸ„", gradient: "from-red-50 via-green-50 to-red-50", border: "border-red-200" },
      "hanukkah" => { emoji: "ğŸ•", gradient: "from-blue-50 via-white to-blue-50", border: "border-blue-200" },
      "winter" => { emoji: "â„ï¸", gradient: "from-blue-50 via-slate-50 to-blue-50", border: "border-blue-200" },
      "generic" => { emoji: "ğŸ", gradient: "from-gray-50 via-gray-100 to-gray-50", border: "border-gray-200" }
    }
    theme = theme_config[@event.theme] || theme_config["christmas"]
  %>
  <div class="bg-gradient-to-r <%= theme[:gradient] %> border-2 <%= theme[:border] %> rounded-lg shadow-lg p-8 mb-8">
    <div class="flex items-start justify-between">
      <div class="flex-1">
        <div class="flex items-center gap-3 mb-3">
          <div class="text-4xl"><%= theme[:emoji] %></div>
          <div>
            <h1 class="text-3xl font-bold text-gray-900"><%= @event.name %></h1>
            <% if @event.draft? %>
              <span class="inline-block bg-yellow-100 text-yellow-800 px-3 py-1 rounded-full text-sm font-semibold mt-1">
                Draft
              </span>
            <% elsif @event.active? %>
              <span class="inline-block bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm font-semibold mt-1">
                Active
              </span>
            <% end %>
          </div>
        </div>

        <% if @event.custom_message.present? %>
          <div class="bg-white/60 backdrop-blur-sm border border-gray-200 rounded-lg p-4 mb-4">
            <p class="text-gray-800 italic">"<%= @event.custom_message %>"</p>
          </div>
        <% end %>

        <div class="text-gray-700 space-y-1">
          <% if @event.event_date %>
            <p>ğŸ“… <%= @event.event_date.strftime("%B %d, %Y") %></p>
          <% end %>
          <% if @event.location %>
            <p>ğŸ“ <%= @event.location %></p>
          <% end %>
          <% if @event.budget %>
            <p>ğŸ’° <%= @event.budget %></p>
          <% end %>
        </div>

        <% if @event.description.present? %>
          <p class="mt-4 text-gray-700"><%= @event.description %></p>
        <% end %>
      </div>
      <div class="text-right">
        <%= link_to "âš™ï¸ Settings", edit_event_settings_path(@event), class: "inline-block bg-white/80 hover:bg-white text-gray-700 px-4 py-2 rounded-lg text-sm font-semibold transition-colors shadow-sm" %>
      </div>
    </div>
  </div>

  <!-- Participants Section -->
  <div class="bg-white rounded-lg shadow-lg p-8 mb-8">
    <h2 class="text-2xl font-bold text-gray-900 mb-6">Participants (<span id="participant-count"><%= @event.participating_count %></span>)</h2>

    <div id="participants-list" class="space-y-3 mb-6">
      <% @participants.each do |participant| %>
        <%= render "participants/participant", participant: participant %>
      <% end %>
    </div>

    <div id="participant-warning">
      <% if @event.participating_count < 3 %>
        <div class="bg-yellow-50 border border-yellow-200 text-yellow-800 px-4 py-3 rounded-lg mb-6">
          âš ï¸ You need at least 3 participants to start the Secret Santa.
        </div>
      <% end %>
    </div>

    <!-- Add Participant Form -->
    <div class="border-t pt-6" data-controller="participant-form">
      <h3 class="text-lg font-semibold mb-4">Add Participants</h3>
      <p class="text-gray-600 mb-4">Add participants one at a time to your Secret Santa.</p>

      <div data-participant-form-target="addButton" class="mb-4">
        <%= render RubyUI::Button.new(data: { action: "click->participant-form#show" }) do %>
          Add Participant
        <% end %>
      </div>

      <div data-participant-form-target="form" class="hidden">
        <%= render "participants/form", event: @event, participant: Participant.new %>
      </div>
    </div>
  </div>

  <!-- Actions -->
  <div class="bg-white rounded-lg shadow-lg p-8">
    <% if @event.active? %>
      <h2 class="text-2xl font-bold text-gray-900 mb-6">Event Launched! ğŸ‰</h2>
      <div class="bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg mb-4">
        âœ“ Your event is live! Invitations have been sent to all participants.
      </div>
      <p class="text-gray-600 mb-4">Launched on <%= @event.launched_at.strftime("%B %d, %Y at %I:%M %p") %></p>

      <div class="bg-gray-50 border border-gray-200 text-gray-600 px-4 py-3 rounded-lg">
        ğŸ”’ Assignments are locked - participants have been notified
      </div>
    <% else %>
      <h2 class="text-2xl font-bold text-gray-900 mb-6">Ready to Launch?</h2>
      <p class="text-gray-600 mb-6">Once you've configured your event and added all participants, launch to draw names and send invitations.</p>

      <div class="mb-6 space-y-2">
        <div class="flex items-center gap-2 text-sm">
          <% if @event.participating_count >= 3 %>
            <span class="text-green-600">âœ“</span>
            <span class="text-gray-700">At least 3 participants added</span>
          <% else %>
            <span class="text-gray-400">â—‹</span>
            <span class="text-gray-500">Need <%= 3 - @event.participating_count %> more participant<%= 's' if (3 - @event.participating_count) != 1 %></span>
          <% end %>
        </div>
        <div class="flex items-center gap-2 text-sm">
          <span class="text-green-600">âœ“</span>
          <span class="text-gray-700">Event settings configured</span>
        </div>
      </div>

      <div id="draw-actions">
        <% if @event.ready_to_launch? %>
          <%= button_to "ğŸš€ Launch Event", launch_event_path(@event), method: :post, class: "w-full bg-green-600 hover:bg-green-700 text-white font-semibold py-4 px-6 rounded-lg transition-colors", data: { turbo_confirm: "Ready to launch? This will draw assignments and send invitations to all participants." } %>
        <% else %>
          <button disabled class="w-full bg-gray-300 text-gray-500 font-semibold py-4 px-6 rounded-lg cursor-not-allowed">
            Add at least <%= 3 - @event.participating_count %> more participant<%= 's' if (3 - @event.participating_count) != 1 %>
          </button>
        <% end %>
      </div>
    <% end %>
  </div>
