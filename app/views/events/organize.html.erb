<div class="max-w-4xl mx-auto">
  <div class="mb-8">
    <%= link_to root_path, class: "text-gray-600 hover:text-gray-900" do %>
      â† Back to home
    <% end %>
  </div>

  <!-- Event Header -->
  <div class="bg-white rounded-lg shadow-lg p-8 mb-8">
    <div class="flex items-start justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= @event.name %></h1>
        <div class="text-gray-600 space-y-1">
          <% if @event.event_date %>
            <p>ğŸ“… <%= @event.event_date.strftime("%B %d, %Y") %></p>
          <% end %>
          <% if @event.location %>
            <p>ğŸ“ <%= @event.location %></p>
          <% end %>
          <% if @event.budget %>
            <p>ğŸ’° <%= @event.budget %></p>
          <% end %>
        </div>
      </div>
      <div class="text-right">
        <span class="inline-block bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm font-semibold">
          Organizer
        </span>
      </div>
    </div>

    <% if @event.description.present? %>
      <p class="mt-4 text-gray-700"><%= @event.description %></p>
    <% end %>
  </div>

  <!-- Participants Section -->
  <div class="bg-white rounded-lg shadow-lg p-8 mb-8">
    <h2 class="text-2xl font-bold text-gray-900 mb-6">Participants (<%= @participants.count %>)</h2>

    <div id="participants-list" class="space-y-3 mb-6">
      <% @participants.each do |participant| %>
        <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
          <div>
            <p class="font-semibold text-gray-900"><%= participant.name %></p>
            <p class="text-sm text-gray-600"><%= participant.email %></p>
          </div>
          <% if participant.is_organizer %>
            <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm font-semibold">
              You
            </span>
          <% end %>
        </div>
      <% end %>
    </div>

    <% if @participants.count < 3 %>
      <div class="bg-yellow-50 border border-yellow-200 text-yellow-800 px-4 py-3 rounded-lg mb-6">
        âš ï¸ You need at least 3 participants to start the Secret Santa.
      </div>
    <% end %>

    <!-- Add Participant Form will go here -->
    <div class="border-t pt-6">
      <h3 class="text-lg font-semibold mb-4">Add Participants</h3>
      <p class="text-gray-600 mb-4">Add participants one at a time or in bulk below.</p>

      <div class="flex gap-4">
        <button class="px-6 py-3 bg-red-600 hover:bg-red-700 text-white font-semibold rounded-lg transition-colors">
          Add Participant
        </button>
        <button class="px-6 py-3 bg-gray-200 hover:bg-gray-300 text-gray-700 font-semibold rounded-lg transition-colors">
          Bulk Import
        </button>
      </div>
    </div>
  </div>

  <!-- Actions -->
  <div class="bg-white rounded-lg shadow-lg p-8">
    <h2 class="text-2xl font-bold text-gray-900 mb-6">Ready to Start?</h2>
    <p class="text-gray-600 mb-6">Once you've added all participants, you can draw names and send invitations.</p>

    <% if @participants.count >= 3 %>
      <button class="w-full bg-green-600 hover:bg-green-700 text-white font-semibold py-4 px-6 rounded-lg transition-colors">
        Draw Names & Send Invitations
      </button>
    <% else %>
      <button disabled class="w-full bg-gray-300 text-gray-500 font-semibold py-4 px-6 rounded-lg cursor-not-allowed">
        Add at least <%= 3 - @participants.count %> more participant<%= 's' if (3 - @participants.count) != 1 %>
      </button>
    <% end %>
  </div>
</div>
