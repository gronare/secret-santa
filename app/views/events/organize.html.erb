<div class="max-w-4xl mx-auto" data-controller="event-draft" data-event-draft-slug-value="<%= @event.slug %>" data-event-draft-action-value="save">
  <div class="mb-8 flex items-center justify-between">
    <%= link_to root_path, class: "text-gray-600 hover:text-gray-900" do %>
      â† Back to home
    <% end %>
    <div class="flex items-center gap-4">
      <% if @event.active? %>
        <%= link_to "ğŸ“Š View Dashboard", dashboard_event_path(@event), class: "text-blue-600 hover:text-blue-800 font-medium" %>
      <% end %>
      <button data-action="click->event-draft#clear" class="text-sm text-gray-500 hover:text-gray-700">
        Start Fresh Event
      </button>
    </div>
  </div>

  <!-- Event Header -->
  <div class="bg-white rounded-lg shadow-lg p-8 mb-8">
    <div class="flex items-start justify-between">
      <div class="flex-1">
        <div class="flex items-center gap-3 mb-2">
          <h1 class="text-3xl font-bold text-gray-900"><%= @event.name %></h1>
          <% if @event.draft? %>
            <span class="inline-block bg-yellow-100 text-yellow-800 px-3 py-1 rounded-full text-sm font-semibold">
              Draft
            </span>
          <% elsif @event.active? %>
            <span class="inline-block bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm font-semibold">
              Active
            </span>
          <% end %>
        </div>
        <div class="text-gray-600 space-y-1">
          <% if @event.event_date %>
            <p>ğŸ“… <%= @event.event_date.strftime("%B %d, %Y") %></p>
          <% end %>
          <% if @event.location %>
            <p>ğŸ“ <%= @event.location %></p>
          <% end %>
          <% if @event.budget %>
            <p>ğŸ’° <%= @event.budget %></p>
          <% end %>
          <p>ğŸ¨ Theme: <%= @event.theme&.titleize || "Christmas" %></p>
        </div>
      </div>
      <div class="text-right">
        <%= link_to "âš™ï¸ Settings", edit_event_settings_path(@event), class: "inline-block bg-gray-100 hover:bg-gray-200 text-gray-700 px-4 py-2 rounded-lg text-sm font-semibold transition-colors" %>
      </div>
    </div>

    <% if @event.custom_message.present? %>
      <div class="mt-4 p-4 bg-blue-50 border border-blue-200 rounded-lg">
        <p class="text-gray-700"><%= @event.custom_message %></p>
      </div>
    <% end %>

    <% if @event.description.present? %>
      <p class="mt-4 text-gray-700"><%= @event.description %></p>
    <% end %>
  </div>

  <!-- Participants Section -->
  <div class="bg-white rounded-lg shadow-lg p-8 mb-8">
    <h2 class="text-2xl font-bold text-gray-900 mb-6">Participants (<span id="participant-count"><%= @participants.count %></span>)</h2>

    <div id="participants-list" class="space-y-3 mb-6">
      <% @participants.each do |participant| %>
        <%= render "participants/participant", participant: participant %>
      <% end %>
    </div>

    <div id="participant-warning">
      <% if @participants.count < 3 %>
        <div class="bg-yellow-50 border border-yellow-200 text-yellow-800 px-4 py-3 rounded-lg mb-6">
          âš ï¸ You need at least 3 participants to start the Secret Santa.
        </div>
      <% end %>
    </div>

    <!-- Add Participant Form -->
    <div class="border-t pt-6" data-controller="participant-form">
      <h3 class="text-lg font-semibold mb-4">Add Participants</h3>
      <p class="text-gray-600 mb-4">Add participants one at a time to your Secret Santa.</p>

      <div data-participant-form-target="addButton" class="mb-4">
        <%= render RubyUI::Button.new(data: { action: "click->participant-form#show" }) do %>
          Add Participant
        <% end %>
      </div>

      <div data-participant-form-target="form" class="hidden">
        <%= render "participants/form", event: @event, participant: Participant.new %>
      </div>
    </div>
  </div>

  <!-- Actions -->
  <div class="bg-white rounded-lg shadow-lg p-8">
    <% if @event.active? %>
      <h2 class="text-2xl font-bold text-gray-900 mb-6">Event Launched! ğŸ‰</h2>
      <div class="bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg mb-4">
        âœ“ Your event is live! Invitations have been sent to all participants.
      </div>
      <p class="text-gray-600 mb-4">Launched on <%= @event.launched_at.strftime("%B %d, %Y at %I:%M %p") %></p>

      <div id="draw-actions">
        <%= button_to "Reshuffle Assignments", draw_assignments_event_path(@event), method: :post, class: "w-full bg-yellow-600 hover:bg-yellow-700 text-white font-semibold py-4 px-6 rounded-lg transition-colors", data: { turbo_confirm: "This will create new assignments for everyone. Continue?" } %>
      </div>
    <% else %>
      <h2 class="text-2xl font-bold text-gray-900 mb-6">Ready to Launch?</h2>
      <p class="text-gray-600 mb-6">Once you've configured your event and added all participants, launch to draw names and send invitations.</p>

      <div class="mb-6 space-y-2">
        <div class="flex items-center gap-2 text-sm">
          <% if @participants.count >= 3 %>
            <span class="text-green-600">âœ“</span>
            <span class="text-gray-700">At least 3 participants added</span>
          <% else %>
            <span class="text-gray-400">â—‹</span>
            <span class="text-gray-500">Need <%= 3 - @participants.count %> more participant<%= 's' if (3 - @participants.count) != 1 %></span>
          <% end %>
        </div>
        <div class="flex items-center gap-2 text-sm">
          <span class="text-green-600">âœ“</span>
          <span class="text-gray-700">Event settings configured</span>
        </div>
      </div>

      <div id="draw-actions">
        <% if @event.ready_to_launch? %>
          <%= button_to "ğŸš€ Launch Event", launch_event_path(@event), method: :post, class: "w-full bg-green-600 hover:bg-green-700 text-white font-semibold py-4 px-6 rounded-lg transition-colors", data: { turbo_confirm: "Ready to launch? This will draw assignments and send invitations to all participants." } %>
        <% else %>
          <button disabled class="w-full bg-gray-300 text-gray-500 font-semibold py-4 px-6 rounded-lg cursor-not-allowed">
            Add at least <%= 3 - @participants.count %> more participant<%= 's' if (3 - @participants.count) != 1 %>
          </button>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
