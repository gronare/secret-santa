<div class="max-w-4xl mx-auto">
  <!-- Event Header -->
  <div class="bg-white rounded-lg shadow-lg p-8 mb-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-4"><%= @event.name %></h1>
    <div class="text-gray-600 space-y-2">
      <% if @event.event_date %>
        <p>ğŸ“… <span class="font-medium">Date:</span> <%= @event.event_date.strftime("%B %d, %Y") %></p>
      <% end %>
      <% if @event.location %>
        <p>ğŸ“ <span class="font-medium">Location:</span> <%= @event.location %></p>
      <% end %>
      <% if @event.budget %>
        <p>ğŸ’° <span class="font-medium">Budget:</span> <%= @event.budget %></p>
      <% end %>
      <% if @event.description.present? %>
        <p class="mt-4"><%= @event.description %></p>
      <% end %>
    </div>
  </div>

  <!-- Your Assignment -->
  <% if @participant&.has_assignment? %>
    <div class="bg-gradient-to-r from-red-50 to-green-50 rounded-lg shadow-lg p-8 mb-8 border-2 border-red-200">
      <h2 class="text-2xl font-bold text-gray-900 mb-4">ğŸ Your Secret Santa Assignment</h2>
      <div class="bg-white rounded-lg p-6">
        <p class="text-lg text-gray-700 mb-4">
          You are Secret Santa for:
        </p>
        <p class="text-3xl font-bold text-red-600 mb-6">
          <%= @participant.assigned_to.name %>
        </p>

        <% if @participant.assigned_to.wishlist_items.any? %>
          <div class="border-t pt-6">
            <h3 class="text-xl font-semibold text-gray-900 mb-4">Their Wishlist</h3>
            <div class="space-y-4">
              <% @participant.assigned_to.wishlist_items.each do |item| %>
                <div class="bg-gray-50 rounded-lg p-4">
                  <p class="font-medium text-gray-900"><%= item.description %></p>
                  <div class="flex items-center gap-4 mt-2 text-sm text-gray-600">
                    <% if item.url.present? %>
                      <%= link_to "View Link â†’", item.url, target: "_blank", class: "text-blue-600 hover:text-blue-800" %>
                    <% end %>
                    <% if item.price.present? %>
                      <span>ğŸ’° <%= item.price %></span>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% else %>
          <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
            <p class="text-yellow-800">
              <%= @participant.assigned_to.name %> hasn't added any wishlist items yet. Check back later!
            </p>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="bg-blue-50 border border-blue-200 rounded-lg p-6 mb-8">
      <p class="text-blue-800">
        Assignments haven't been made yet. Check back soon!
      </p>
    </div>
  <% end %>

  <!-- Your Wishlist -->
  <div class="bg-white rounded-lg shadow-lg p-8">
    <div class="flex items-center justify-between mb-6">
      <h2 class="text-2xl font-bold text-gray-900">Your Wishlist</h2>
      <%= link_to "Manage Wishlist â†’", wishlist_items_path, class: "text-blue-600 hover:text-blue-800 font-semibold" %>
    </div>

    <% if @participant&.wishlist_items&.any? %>
      <div class="space-y-3">
        <% @participant.wishlist_items.limit(3).each do |item| %>
          <div class="bg-gray-50 rounded-lg p-4">
            <p class="font-medium text-gray-900"><%= item.description %></p>
            <div class="flex items-center gap-4 mt-2 text-sm text-gray-600">
              <% if item.url.present? %>
                <%= link_to "View Link â†’", item.url, target: "_blank", class: "text-blue-600 hover:text-blue-800" %>
              <% end %>
              <% if item.price.present? %>
                <span>ğŸ’° <%= item.price %></span>
              <% end %>
            </div>
          </div>
        <% end %>
        <% if @participant.wishlist_items.count > 3 %>
          <p class="text-sm text-gray-500 text-center pt-2">
            And <%= @participant.wishlist_items.count - 3 %> more item<%= @participant.wishlist_items.count - 3 == 1 ? '' : 's' %>...
          </p>
        <% end %>
      </div>
    <% else %>
      <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6">
        <p class="text-yellow-800 mb-4">
          You haven't added any wishlist items yet. Help your Secret Santa by adding some gift ideas!
        </p>
        <%= link_to "Add Wishlist Items", wishlist_items_path, class: "inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg transition-colors" %>
      </div>
    <% end %>
  </div>
</div>
